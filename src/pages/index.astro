---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Skills from "../components/Skills.astro";
import Projects from "../components/Projects.astro";
import Tools from "../components/icons/Tools.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import ProfileCard from "../components/icons/ProfileCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Hero from "../components/Hero.astro";

---

<Layout
	title="Aimar Bustamante - Desarrollador Web Frontend con 2 años de experiencia"
	description="Bienvenido a mi portafolio. Soy Aimar, un desarrollador frontend con 2 años de experiencia creando soluciones web innovadoras y funcionales. Desde Panamá 🇵🇦, me especializo en las últimas tecnologías de desarrollo web. Explora mis proyectos y descubre cómo puedo ayudarte a llevar tu negocio al siguiente nivel."
>
	<main>
		<SectionContainer id="inicio" class="pt-36 pb-20 md:py-36">
			<Hero/>
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<h2 class="text-4xl font-semibold mb-4 flex gap-x-3 items-center">
				<ProfileCard class="size-9" />
				Sobre Mi
			</h2>
			<AboutMe />
		</SectionContainer>

		<SectionContainer id="habilidades" class="pb-16">
			<h2 class="text-4xl font-semibold mb-4 flex gap-x-3 items-center">
				<Tools class="size-9" />
				Habilidades
			</h2>
			<Skills />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-4xl font-semibold mb-4 flex gap-x-3 items-center">
				<Briefcase class="size-9" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
